---


const response = await fetch('https://fakestoreapi.com/products');
const data = await response.json();
console.log(data)





---
<div class="wrapper">
    {data.map((item) => {
        return (
    <div class="card-container">
    
            <h2 class="card-title">{item.title}</h2>
            <img class="card-image"src={item.image} alt="">
            <p class="card-desc">{item.description}</p>
            <div class="card-price-container">
            <p class="card-price"> Price : {item.price} $</p>
            <p class="card-rating"> Rating :{item.rating.rate}</p>
            </div>
        </div>
        )
    })}

</div>


<style>
    .wrapper{
        display: flex;
        flex-wrap: wrap;
        gap:20px;
        padding: 10px 30px;
        justify-content: center;
    }

    .card-container{
        width: 550px;
        border: 5px solid dodgerblue;
        background-color: antiquewhite;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        box-shadow: 3px 3px 8px ;
        transition: all .4s;


    }
    .card-container:hover{
        transform: scale(1.03);
        background-color: rgb(240, 234, 225);
    }

    .card-title{
        color:dodgerblue;
        text-align: center;
        height: 100px;

    }

    .card-image{
        width:200px;
        height: 150px;
        text-align: center;
    }

    .card-desc{
        padding: 30px 30px 50px 30px;
    }

    .card-price-container{
        display: flex;
        gap:100px;
        position: absolute;
        bottom:0;
        align-items: center;
        
    }

    .card-price{
        background-color: rgb(36, 163, 36);
        padding: 10px;
        color: white;
        font-weight: bold;
    }

    .card-rating{
        background-color: dodgerblue;
        padding: 10px;
        color: white;
        font-weight: bold;
    }


    </style>



